<h1>Edit yo shit</h1>

<%= form_for :article, url: category_article_path(@category, @article), method: :patch do |f|  %>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :body  %><br>
  <%= f.text_area :body %>
</p>

<p>
  <%= f.label :price %><br>
  <%= f.text_field :price %>
</p>

<p>
  <%= f.submit %>
</p>

<% end  %>

<%= link_to 'Back', category_articles_path(@category) %>
