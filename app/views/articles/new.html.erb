<h1> <%= @category.name  %> </h1>


<%= form_for :article, url: articles_path(@category) do |f|  %>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :body  %><br>
  <%= f.text_area :body %>
</p>

<p>
  <%= f.label :price %><br>
  <%= f.text_field :price %>
</p>

<p>
  <%= f.submit %>
</p>

<% end  %>
